    private void btnentrarActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnentrarActionPerformed
        if (txtlogin.getText().equals("") || txtsenha.getText().equals("")) {
            JOptionPane.showMessageDialog(null, "Informe o login e a senha!");
            txtlogin.setText("");
            txtlogin.requestFocus();
            txtsenha.setText("");
        } else {
            resultado = gerenciaAcesso.verificaLogin(txtlogin.getText(), txtsenha.getText());

            try {
                if (!resultado.isBeforeFirst()) {
                    JOptionPane.showMessageDialog(null, "Login ou senha inv√°lidos!");
                    txtlogin.setText("");
                    txtlogin.requestFocus();
                    txtsenha.setText("");
                }

                while (resultado.next()) {

                    Principal principal = new Principal(resultado.getInt("matricula"));
                    principal.setVisible(true);
                    dispose();
                }
            } catch (SQLException ex) {
                Logger.getLogger(Login.class.getName()).log(Level.SEVERE, null, ex);
            }
        }

    }//GEN-LAST:event_btnentrarActionPerformed

